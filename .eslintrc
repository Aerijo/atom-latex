{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
  },
  "globals": {
    "atom": true,
    "latex": true,
  },
  "rules": {
    "strict": 0,

    "brace-style": [2, "stroustrup", {"allowSingleLine": true}],
    "consistent-this": [2, "self"],
    "curly": 2,
    "indent": [2, 2],
    "new-cap": 2,
    "new-parens": 2,
    "no-multiple-empty-lines": 2,
    "no-spaced-func": 2,
    "no-var": 2,
    "space-in-brackets": [2, "never"],
    "space-in-parens": [2, "never"],
    "quotes": [2, "double"],
  },
}
